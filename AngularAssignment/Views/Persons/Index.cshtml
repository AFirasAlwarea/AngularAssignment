@model IEnumerable<AngularAssignment.Models.Person>

@{
    ViewBag.Title = "Index";
}

<h2>{{message}} (SPA) using <b>AngularJS</b></h2>

<button type="button" ng-click="ShowList()">Show The List</button>
<br />
<div ng-repeat="friend in PersonsList">
    <ul>
        <li>{{friend.Name}}
        <button type="button" ng-click="Edit">Edit</button>
        <button type="button" ng-click="showDetails(friend.Name)">Details</button></li>
    </ul>
</div>

<div class="col-md-6">
    <p>Name: {{onePerson.Name}}</p>
    <p>Telephone: {{onePerson.Telephone}}</p>
    <p>Email: {{onePerson.Email}}</p>
</div>
<div class="col-md-6">

</div>

